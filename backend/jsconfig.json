{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@loaders/*": ["src/loaders/*"],
      "@api/*": ["src/api/*"],
      "@domain/*": ["src/domain/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@ml/*": ["src/ml/*"]
    },
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "controllers/**/*",
    "routes/**/*",
    "models/**/*",
    "services/**/*",
    "middleware/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "recordingStudio"
  ]
}

